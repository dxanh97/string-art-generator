{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "es2020"],
    "types": ["d3", "vite/client"],

    // Other Outputs
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,

    // Type Checking
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["src", "vite.config.ts"],
  "references": []
}
